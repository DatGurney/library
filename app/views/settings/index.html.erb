
<h1>Settings</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Value</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @settings.each do |setting| %>
      <tr>
        <td><%= setting.name %></td>
        <td><%= setting.value %></td>
        <td><%= link_to 'Edit', edit_setting_path(setting), class: "btn btn-warning" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
