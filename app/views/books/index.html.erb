<h1>Books</h1>
<p>This is where books are kept</p>
<%= link_to "Create new Book", new_book_path , class: "btn btn-primary" %>
<table class="table table-striped">
<thead>
	<tr>
	<td> name </td>
	<td> isbn </td>
	<td> author </td>
	<td> publisher </td>
	</tr>
</thead>
<tbody>
	
<% @books.each do |book|%>
<tr> 
<td><%= link_to book.name, book %></td>
<td><%= book.isbn%> </td>
<td><%= book.author	%> </td>
<td><%= book.publisher%> </td>
<td><%= link_to "edit", edit_book_path(book), class: "btn btn-warning" %> </td>
<td><%= link_to "delete", book_path(book), class: "btn btn-danger", method: :delete %> </td>
</tr>
<%end%>
</tbody>
</table>
