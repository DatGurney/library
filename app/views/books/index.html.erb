<h1>Books</h1>
<p>This is where books are kept</p>
<%= link_to "Create new Book", new_book_path%>
<table> 
<thead>
	<tr>
	<td> author </td>
	<td> isbn </td>
	<td> name </td>
	<td> publisher </td>
	</tr>
</thead>
<tbody>
	
<% @books.each do |book|%>
<tr> 
<td> <%= book.author%> </td>
<td> <%= book.isbn%> </td>
<td> <%= book.name%> </td>
<td> <%= book.publisher%> </td>
<td> <%= link_to "edit", edit_book_path(book) %> </td>
<td> <%= link_to "delete", book_path(book), method: :delete %> </td>
</tr>
<%end%>
</tbody>
</table>
