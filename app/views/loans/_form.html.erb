      <h2><%= pluralize(@loan.errors.count, "error") %> prohibited this loan from being saved:</h2>

      <ul>
      <% @loan.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :book_id %><br>
    <%= f.select :book_id, Book.all.map {|i| [i.name, i.id]}, include_blank: true %>
  </div>
  <div class="form-group">
    <%= f.label :user_id %><br>
    <%= f.select :user_id, User.all.map {|i| [i.name, i.id]}, include_blank: true %>
  </div>
  <div class="form-group">
    <%= f.label :start_point %><br>
    <%= f.date_select :start_point, start_year: Date.today.year %>
  </div>
  <div class="form-group">
    <%= f.label :end_point %><br>
    <%= f.date_select :end_point, include_blank: true, start_year: Date.today.year  %>
  </div>
  <div class="form-group">
    <%= f.label :price %><br>
    <%= f.text_field :price, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-warning" %>
  </div>
<% end %>
